{
	"compilerOptions": {
		"target": "ES2022",
		"module": "CommonJS",
		"outDir": "dist",
		"baseUrl": "./src",
		"rootDir": "./",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"lib": ["esnext"],
		"allowJs": true,
		"paths": {
			"@modules/*": ["modules/*"],
			"@shared/*": ["shared/*"],
			"@config/*": ["config/*"],
			"@services/*": ["services/*"],
			"@repositories/*": ["repositories/*"],
			"@controllers/*": ["controllers/*"],
			"@middlewares/*": ["middlewares/*"],
			"@routes/*": ["routes/*"],
			"@tests/*": ["tests/*"],
			"@interfaces/*": ["interfaces/*"]
		}
	},
	"exclude": ["node_modules", "public_html", "test", "tsconfig.json"]
}
